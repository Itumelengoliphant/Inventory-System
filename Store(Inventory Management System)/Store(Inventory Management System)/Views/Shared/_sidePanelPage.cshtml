
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Inventory System</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.js"></script>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>



<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"></div>
            <div class="list-group list-group-flush">
                <a href="~/User/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-users" aria-hidden="true"></i> Users</a><hr style="margin-top:0px" />
                <a href="~/Role/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-question-circle" aria-hidden="true"></i> Roles</a><hr style="margin-top:0px" />
                <a href="~/Category/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-list-alt" aria-hidden="true"></i> Categories</a><hr style="margin-top:0px" />
                <a href="~/Product/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-wrench" aria-hidden="true"></i> Products</a><hr style="margin-top:0px" />
                <a href="~/ProductOut/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Borrow Product</a><hr style="margin-top:0px" />
                <a href="~/ItemReturn/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-exchange" aria-hidden="true"></i> Return Product</a><hr style="margin-top:0px" />
                <a href="~/Department/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-building-o" aria-hidden="true"></i> Departments</a><hr style="margin-top:0px" />
                <a href="~/Institutions/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-home" aria-hidden="true"></i> Institution</a><hr style="margin-top:0px" />
                <a href="~/Laptop/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-laptop" aria-hidden="true"></i> Laptops</a><hr style="margin-top:0px" />
                <a href="~/Suppliers/Index" class="list-group-item list-group-item-action bg-light"><i class="fa fa-briefcase" aria-hidden="true"></i> Supplier</a><hr style="margin-top:0px" />
                <a href="#" class="list-group-item list-group-item-action bg-light"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a><hr style="margin-top:0px" />


            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i> Menu</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Welcome <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Departments
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Electrical</a>
                                <a class="dropdown-item" href="#">Welding</a>
                                <a class="dropdown-item" href="#">Plumbing</a>
                                <a class="dropdown-item" href="#">Mechanical</a>
                                <a class="dropdown-item" href="#">Trade Test</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Office</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->
        <!-- Bootstrap core JavaScript -->

        <script src="~/Scripts/jquery/jquery.min.js"></script>
        <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>



        <!-- Menu Toggle Script -->
        <script>
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });</script>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts",required:false)
</body>

</html>
