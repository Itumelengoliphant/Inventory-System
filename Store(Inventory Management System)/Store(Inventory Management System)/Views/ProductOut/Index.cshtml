@model IEnumerable<Store_Inventory_Management_System_.ProductOut>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

@Html.ActionLink(" Print PDF", "Reports", new { ReportType = "PDF" }, new { @class = "btn btn-success fa fa-print" }) |
@Html.ActionLink(" Print Word", "Reports", new { ReportType = "Word" }, new { @class = "btn btn-primary fa fa-print" }) |
@Html.ActionLink(" Print Excel", "Reports", new { ReportType = "Excel" }, new { @class = "btn btn-danger fa fa-print" }) 


<br />
<br />
<h2>Borrow Item(s)</h2>

<p>
    @Html.ActionLink("Borrow Item", "Create",new { @class = "btn btn-success fa fa-print" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>

                @Html.ActionLink(" Edit", "Edit", "ProductOut", new { id = item.Id }, new { @class = "btn btn-primary fa fa-pencil-square-o" }) |
                @Html.ActionLink(" Details", "Details", "ProductOut", new { id = item.Id }, new { @class = "btn btn-success fa fa-info-circle" }) |
                @Html.ActionLink(" Delete", "Delete", "ProductOut", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash-o" })
            </td>
        </tr>
    }

</table>
