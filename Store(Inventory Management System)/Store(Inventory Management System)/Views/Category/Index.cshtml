@model IEnumerable<Store_Inventory_Management_System_.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink(" Add Category", "Create", "Category", new { @class = "btn btn-primary fa fa-plus-circle" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>

            @Html.ActionLink(" Edit", "Edit", "Category", new { id = item.Id }, new { @class = "btn btn-primary fa fa-pencil-square-o" }) |
            @Html.ActionLink(" Details", "Details", "Category", new { id = item.Id }, new { @class = "btn btn-success fa fa-info-circle" }) |
            @Html.ActionLink(" Delete", "Delete", "Category", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash-o" })
       
        </td>
    </tr>
}

</table>
