@model IEnumerable<Store_Inventory_Management_System_.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<h2>List of Users</h2>

<p>
    @Html.ActionLink(" Add New", "Create", "User", new { @class = "btn btn-primary fa fa-plus-circle" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
           Role
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @Html.ActionLink(" Edit", "Edit", "User", new { id = item.Id }, new { @class = "btn btn-primary fa fa-pencil-square-o" }) |
            @Html.ActionLink(" Details", "Details", "User", new { id = item.Id }, new { @class = "btn btn-success fa fa-info-circle" }) |
            @Html.ActionLink(" Delete", "Delete", "User", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash-o" })
        </td>
    </tr>
}

</table>
